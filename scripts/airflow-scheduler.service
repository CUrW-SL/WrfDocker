[Unit]
Description=Airflow scheduler daemon
[Service]
User=curw
Group=curw
Type=simple
ExecStart=/bin/bash -c "airflow scheduler --pid /opt/airflow/airflow-scheduler.pid"
Restart=always
RestartSec=5s
[Install]
WantedBy=multi-user.target